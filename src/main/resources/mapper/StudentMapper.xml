<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.jiyun.mapper.StudentMapper">
    <select id="findByLimit" parameterType="cn.jiyun.pojo.Student" resultType="cn.jiyun.pojo.Student">
        select * from student where true
        <if test="student.name!=null and student.name!=''">
            and name like '%${student.name}%'
        </if>
        <if test="student.dname!=null and student.dname!=''">
            and dname = #{student.dname}
        </if>
    </select>
</mapper>